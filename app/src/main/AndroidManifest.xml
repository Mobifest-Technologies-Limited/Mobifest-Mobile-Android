<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="co.mobifest.mobile">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/mob_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/mob_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.locomotive.LocomotiveHomeActivity" />
        <activity
            android:name=".ui.rentals.RentalsActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.shopping.ShoppingActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.home.UserHomeActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ui.UserRegisterActivity" />
        <activity android:name=".ui.LoginActivity" />
        <activity android:name=".ui.ResetPasswordActivity" />
        <activity android:name=".ui.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>